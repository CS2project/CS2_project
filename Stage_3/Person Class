/**
 * Represents a person in the restaurant system.
 */
public class Person {
    private String name;
    private String email;
    private String phone;
    private String address;

    public Person(String name, String email, String phone, String address) {
        this.name = name;
        this.email = email;
        this.phone = phone;
        this.address = address;
    }

    public void updateContactInfo(String email, String phone, String address) {
        this.email = email;
        this.phone = phone;
        this.address = address;
        System.out.println("Contact information updated for: " + name);
    }

    public String getFullName() {
        return name;
    }

    public void printInfo() {
        System.out.printf("Name: %s, Email: %s, Phone: %s, Address: %s%n", name, email, phone, address);
    }
}
